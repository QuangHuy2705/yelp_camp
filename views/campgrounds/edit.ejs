
<% include ../partials/header.ejs %>


    <div class="row">
    <h1 style="text-align: center;">Edit <%= campground.name %></h1>
        <div style="width:30%; margin:30px auto;">
            <form action="/campgrounds/<%= campground._id %>/?_method=PUT"  method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" value="<%=campground.name%>"></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="price" value="<%=campground.price%>" step="1"></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" id="image" name="image" value="<%=campground.image%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" value="<%=campground.description%>"></input>
                </div>
                <div class="form-group">
                    
                    <input class="form-control" type="text" name="location" id="location" value="<%= campground.location %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Update!</button>
                </div>

                
            </form>
            <a style="margin:0 auto;" href="/campgrounds">Go back</a>
        </div>
    </div>

<% include ../partials/footer.ejs %>
